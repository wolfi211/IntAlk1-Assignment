@model IntAlk1_Assignment.Models.OwnerModel

<div class="container mt-4">
    <div class="text-center">
        <h3>Owner</h3>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<hr />
<div class="container text-center">
    <h6>Owner's Properties</h6>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Address</th>
                <th scope="col">Tenant</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Properties.Any())   
                {
                    foreach(PropertyModel item in Model.Properties)
                    {
                        <tr>
                            <td scope="row"><a href="/registry/DetailsProperty?Id=@item.Id">@item.Address</a></td>
                            <td><a href="/registry/DetailsTenant?Id=@item.Tenant.Id">@(item.Tenant != null ? item.Tenant.Name : "No tenant")</a></td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
<div class="row d-flex justify-content-center">
    <div class="col-3 d-grid">
        <a asp-action="EditOwner" asp class="btn btn-secondary">Edit</a>
    </div>
    <div class="col-3 d-grid">
        <a asp-action="OwnerList" class="btn btn-secondary">Back to List</a>
    </div>
    <div class=" col-3 d-grid">
        <a href="/registry/DeleteOwner/@Model.Id" class="btn btn-outline-warning">Delete</a>
    </div>
</div>
